<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="WpfApp2.YourIPDialog"
    xmlns:local="clr-namespace:WpfApp2"
    Title="Your IP address"
    Height="130"
    Width="300"
    MinHeight="170"
    MinWidth="300"
    MaxHeight="170"
    MaxWidth="300"
    ResizeMode= "NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner" 
    FocusManager.FocusedElement="{Binding ElementName=leftMarginTextBox}">

    <Grid Margin="0,0,4,77">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="62*"/>
            <ColumnDefinition Width="85*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="yourIPAddress" HorizontalAlignment="Left" Height="20" Margin="10,53,0,-49" TextWrapping="Wrap" Text="Your IP address" VerticalAlignment="Top" Width="272" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="This is your IP address:" VerticalAlignment="Top" Height="22" Width="272" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
