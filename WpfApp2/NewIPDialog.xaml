<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="WpfApp2.NewIPDialog"
    xmlns:local="clr-namespace:WpfApp2"
    Title="Add new IP"
    Height="170"
    Width="300"
    MinHeight="170"
    MinWidth="300"
    MaxHeight="170"
    MaxWidth="300"
    ResizeMode= "NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner" 
    FocusManager.FocusedElement="{Binding ElementName=leftMarginTextBox}">

    <Grid>
        <TextBox x:Name="clientsIPAddress" HorizontalAlignment="Left" Height="20" Margin="10,83,0,0" TextWrapping="Wrap" Text="Client's IP address" VerticalAlignment="Top" Width="272"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Add the IP address of the client you want to contact. To obtain the address go (on the clients side) to &quot;MyIP&quot; and paste that address here" VerticalAlignment="Top" Height="68" Width="272"/>
        <Button x:Name="newIPBoxOkButton" Content="Ok" HorizontalAlignment="Left" Margin="105,108,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>


    </Grid>
</Window>
